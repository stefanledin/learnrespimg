if user
    section.section.wrapper.bg-dark-green
        .container.container--wide
            .top-bar
                .game-stats
                    .game-stats__icons-wrapper
                        .game-stats__icon.js-open-trophy-shelf
                            img(src="/img/trophy_icon.png")
                            span My trophies
                .account
                    a(href="/logout") Log out
        .trophies
            .container
                .trophies__header
                    h3.text-grey Trophies
                    .trophies__close
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"/></svg>
                .row                    
                    - var trophies = {'friendly_human': 'Friendly human', 'sizes_matters': 'Sizes matters', 'srcset_master': 'Srcset master', 'picture_expert': 'Picture expert', 'best_friend': 'Best friend'};
                    if user.trophies.length
                        each trophy in user.trophies
                            .col3.game-stats__icon.game-stats__icon--large
                                img(src="/img/trophies/"+trophy+"_1x.png", srcset="/img/trophies/"+trophy+"_1x.png 300w, /img/trophies/"+trophy+"_2x.png 600w", sizes="300px")
                                span #{trophies[trophy]}