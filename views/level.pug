extends master.pug

block body
    section.section-wrapper
        .container
            .level
                h1 Level #{level}
                .level__description
                    p #{levelData.description}
                    
                .level__details
                    h3 Todo
                    .level__todo
                        .inner
                            | #{levelData.todo}
                    
                    h3 Assets
                    .level__assets
                        .inner
                            ul
                                each asset in levelData.assets
                                    li= asset

                .level__solve
                    h2 Code!
                    .level__editor-wrapper
                        input.level__editor(type="text" v-model="markup" value=levelData.starterMarkup)
                        button.level__compile(v-on:click="checkMarkup") Save

                .modal__overlay(v-show="correctAnswer", style="display: none")
                    .modal
                        .modal__body
                            .inner
                                h2.modal__title Good!
                                p.center Du har hjälpt SmåFot att lägga till en stor bild på sin sajt.
                                a.button.center-block(href=levelData.nextURL) Nästa uppgift

                .modal__overlay(v-show="wrongAnswer", style="display: none;")
                    .modal
                        .modal__body
                            .inner
                                h2.modal__title Wrong!
                                button.center-block(v-on:click="tryAgain") Try again!

                iframe#render.hidden

block scripts
    script.
        window.levelData=!{JSON.stringify(levelData)}